html
    font 300 14px/1 Arial
html
body
    
    margin 0
    padding 0
    width 100%
    height 100%
    
h1, h2, h3, h4, h5, h6
    margin 0
    
h1
    font 700 1.5rem/1 Arial

pos()
    left arguments[0]
    top arguments[1]
    
    if arguments[2]
        right arguments[2]
    if arguments[3]
        bottom arguments[3]
        
abs()
    position absolute
    pos(arguments)
    
size(w,h)
    width w
    height h