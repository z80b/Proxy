.b-panel
    background #fff
    border 1px solid #555
    border-radius .5rem
    overflow hidden
    text-align left
    
    &__header, &__footer
        @extends $clear-block
        font 300 1rem/1 Arial
        padding 1rem 2rem
        background #777
        
    &__header, &__footer, &__body
        box-sizing border-box
        
    &__title
        font 600 1rem/1 Arial
        float left
        padding .5rem 0
        color #fff
        
    &__header
        font-weight 600
        
        &-controls
            float right
        
    &__body
        padding 2rem
        margin 2px 0 0
        overflow-y auto
           
    &__footer
        &-stat
            @extends $control
            float left
            margin .5rem 0
            padding .5rem 1rem
            
    &--fullscreen
        abs(1rem, 1rem, 1rem, 1rem)
        
        ~/__header
            min-height 4rem
            position absolute
            top 0
            width 100%
            
        ~/__body
            position absolute
            top 4rem
            bottom 5rem
            width 100%
        
        ~/__footer
            min-height 5rem
            position absolute
            width 100%
            bottom 0