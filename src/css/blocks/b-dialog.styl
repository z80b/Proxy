.b-dialog
    position relative
    display inline-block
    background #fff
    border 1px solid #555
    border-radius .5rem
    overflow hidden
    text-align left
    
    &__wrapper
        position absolute
        display table
        top 0
        left 0
        width 100%
        height 100%
        
        &-inner
            display table-cell
            text-align center
            vertical-align middle
    
    &__overlay
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        background rgba(#000, .4)
        
    &__head
        padding 1rem 2rem
        background #777
        
    &__title
        font 600 1rem/1 Arial
        
    &__body
        padding 2rem